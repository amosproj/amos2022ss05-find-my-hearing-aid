<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             xmlns:local="clr-namespace:FindMyBLEDevice.ViewModels" x:DataType="local:MapViewModel"
             x:Class="FindMyBLEDevice.Views.MapPage"
             AutomationId="Page_Map"
             Shell.NavBarIsVisible="False" >

    <Grid Background="{StaticResource DarkGradient}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" Orientation="Vertical" Padding="20,0,20,20" Spacing="10">

            <Label Text="{Binding Title}" FontSize="40" TextColor="White" FontAttributes="Bold"/>

            <maps:Map x:Name="map"/>
            
        </StackLayout>

        <Button Grid.Row="0" 
                VerticalOptions="EndAndExpand"
                HorizontalOptions="StartAndExpand"
                Margin="25"
                Text="Open in Maps"
                TextColor="White"
                BackgroundColor="{StaticResource Accent}"
                Command="{Binding OpenMapPin}"
                IsVisible="{Binding DeviceNotNull}" />

        <Button Grid.Row="1" 
                Text="{Binding SelectedDeviceString}"
                Command="{Binding SelectDevice}"
                BackgroundColor="{StaticResource Accent}"
                Margin="0"
                CornerRadius="0"
                TextColor="White" 
                FontSize="Medium" 
                FontAttributes="Bold"
                />

        <ImageButton Grid.Row="0" 
                     VerticalOptions="StartAndExpand" 
                     HorizontalOptions="EndAndExpand" 
                     Margin="10" 
                     WidthRequest="40"
                     Source="icon_questionmark.png"  
                     Command="{Binding OpenInfoPageCommand}" 
                     BackgroundColor="Transparent" />

    </Grid>

</ContentPage>
